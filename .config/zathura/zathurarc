# copy and pasting
set selection-clipboard clipboard

# basic settings
set adjust-open "width"
set font "inconsolata 15"
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 2
set window-title-home-tilde 1

# key maps
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map I zoom in
map U zoom out
map i recolor
map p print

# Include theme config file below

include $HOME/.config/base16/zathura/base16-tk-nord.config
