%% This style file contains the packages I use frequently and the my own macros for various symbols
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tk_beamer1}[2020/06/20 my beamer customizations for online teaching]


%% OSU colors
\definecolor{osured}{rgb}{0.80784,0.058824,0.23922}
\definecolor{osugray}{rgb}{0.6902, 0.71765, 0.73725}

%% Themes
\usetheme{Madrid}
\usecolortheme{beaver}
\usefonttheme[]{professionalfonts}

%% Page layout/size
% \setbeamersize{text margin left=20pt,text margin right=100pt}
\setbeamersize{text margin left=0.05\paperwidth,text margin right=0.20\paperwidth}

%% Set colors
\setbeamercolor{structure}{fg=osured, bg=white}
\setbeamercolor{frametitle}{fg=osured, bg=osugray!10}
