#!/bin/sh
# Reloading sxhkdrc.
# Reference:
#  [1] https://wiki.archlinux.org/index.php/Sxhkd
#  [2] https://bash.cyberciti.biz/guide/Sending_signal_to_Processes

if pgrep -x sxhkd >/dev/null; then
    killall -10 sxhkd
    notify-send.sh "SXHKD Reloaded"
else
    sxhkd &
    notify-send.sh "SXHKD Started"
fi
